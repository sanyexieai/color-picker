export component ColorPicker inherits Window {
    no-frame: true;
    background: transparent;

    width: 200px;
    height: 200px;

    // 十字的长度
    property <length> cross_length: 20px;

    // 十字的中心位置
    property <length> cross_x: 100px; // 默认中心 x 坐标
    property <length> cross_y: 100px; // 默认中心 y 坐标

    Rectangle {
        width: 100%;
        height: 100%;
        background: transparent;

        // 圆形 - 使用 border-radius 实现
        Rectangle {
            width: 100%;
            height: 100%;
            background: transparent;
            border-width: 2px;
            border-color: black;
            border-radius: 100px;  // 设置为半径，确保是圆形
        }

        // 横线 第一段
        Rectangle {
            x: cross_x - (cross_length / 2); // 横线居中
            y: cross_y;                       // 横线的 y 坐标
            width: (cross_length / 2) - 1px;              // 设置横线的宽度
            height: 1px;                      // 设置横线的高度
            background: black;
        }

        // 横线 第二段
        Rectangle {
            x: cross_x + 1px; // 横线居中
            y: cross_y;                       // 横线的 y 坐标
            width: (cross_length / 2) - 1px;              // 设置横线的宽度
            height: 1px;                      // 设置横线的高度
            background: black;
        }
        // 竖线 第一段
        Rectangle {
            x: cross_x;                      // 竖线的 x 坐标
            y: cross_y - (cross_length / 2) ; // 竖线居中
            width: 1px;                      // 设置竖线的宽度
            height:(cross_length / 2) - 1px;            // 设置竖线的高度
            background: black;
        }
        // 竖线 第二段
        Rectangle {
            x: cross_x;                      // 竖线的 x 坐标
            y: cross_y + 1px; // 竖线居中
            width: 1px;                      // 设置竖线的宽度
            height: (cross_length / 2) - 1px;            // 设置竖线的高度
            background: black;
        }
    }
}
